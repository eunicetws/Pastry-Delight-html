.ol {
  position: relative;
  width: 100%;
}

.ol:hover .overlay {
  height: 100%;
}

.button{
  font-family:"Quick Sand";
  background-color: #cd567f;
  color: #EED6D3;
  font-size: 14px;
  border: none;
  cursor: pointer;
  border-radius: 12px;
  font-weight: bold;
}

.dropbtn {
  font-family:"Quick Sand";
  background-color: #cd567f;
  color: #EED6D3;
  padding: 12px;
  font-size: 14px;
  border: none;
  cursor: pointer;
  border-radius: 12px;
  font-weight: bold;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  font-family:"Quick Sand";
  display: none;
  position: absolute;
  background-color: #EED6D3;
  width: 100px;
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
  border-radius: 12px;
  font-weight: bold;

}

.dropdown-content a {
  font-family:"Quick Sand";
  color: #cd567f;
  padding: 10px 10px;
  text-decoration: none;
  display: block;
  border-radius: 12px;
  font-weight: bold;
}

.dropdown-content a:hover {background-color: #E5A5BB}

.dropdown:hover .dropdown-content {
  display: block;
  border-radius: 12px;
}

.dropdown:hover .dropbtn {
  background-color: #D46D90;
}

.image {
  display: block;
  width: 100%;
  height: auto;
  border: 1px;
}

.imagecontainer{
  position: relative;
  width: 100%;
}

.overlay {
  position: absolute; 
  bottom: 0; 
  left:0;
  right:0;
  background: #cd567f;
  overflow: hidden;
  width: 100%;
  height: 0;
  transition: .5s ease;
  border-radius: 10px;
  font-weight: bold;
}

.imagecontainer:hover .overlay {
  height:100%;
} 

.text {
  color:white ;
  font-size: 20px;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
  font-weight: bold;
}

.icon {
display: flex;
justify-content: space-between;
align-items: center;
}
